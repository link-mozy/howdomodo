<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.howdomodo.mapper.UsersMapper">

    <!-- 일반 회원가입 -->
    <insert id="join" parameterType="com.ssafy.howdomodo.domain.Users">
        INSERT INTO users (`user_code`, `user_email`, `user_name`, `user_nick`, `user_pw`, `user_gender`, `user_birth`)
                        VALUES (#{userCode}, #{userEmail}, #{userName}, #{userNick}, #{userPw}, #{userGender}, #{userBirth})
    </insert>
    
    <!-- email 중복체크 -->
    <select id="findByUserEmail" parameterType="string" resultType="string">
    	select user_email from users where user_email=#{userEmail}
    </select>
    
    <!-- 닉네임 중복체크 -->
    <select id="findByUserNick" parameterType="string" resultType="string">
    	select user_nick from users where user_nick=#{userNick}
    </select>
</mapper>
