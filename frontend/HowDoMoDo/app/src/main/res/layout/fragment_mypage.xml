<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frag_my_cl_top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/frag_my_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:lineSpacingExtra="3sp"
            android:text="마이페이지"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/frag_my_tv_nickName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:lineSpacingExtra="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="#2e86ff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/frag_my_cl_top" />

    <TextView
        android:id="@+id/frag_my_tv_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="님"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/frag_my_tv_nickName"
        app:layout_constraintStart_toEndOf="@id/frag_my_tv_nickName"
        app:layout_constraintTop_toTopOf="@id/frag_my_tv_nickName" />


    <TextView
        android:id="@+id/frag_my_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="6sp"
        android:text="ghkdua059@gmail.com"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/frag_my_tv_nickName"
        app:layout_constraintTop_toBottomOf="@id/frag_my_tv_nickName" />

    <View
        android:id="@+id/frag_my_view_center"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="#aaaaaa"
        app:layout_constraintBottom_toBottomOf="@id/frag_my_tv_email"
        app:layout_constraintStart_toEndOf="@id/frag_my_tv_email"
        app:layout_constraintTop_toTopOf="@id/frag_my_tv_email" />

    <TextView
        android:id="@+id/frag_my_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:lineSpacingExtra="6sp"
        android:text="김찬영"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        app:layout_constraintBottom_toBottomOf="@id/frag_my_tv_email"
        app:layout_constraintStart_toEndOf="@id/frag_my_view_center"
        app:layout_constraintTop_toTopOf="@id/frag_my_tv_email" />

    <TextView
        android:id="@+id/frag_my_tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:lineSpacingExtra="6sp"
        android:text="수정"
        android:textColor="#276dce"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/frag_my_tv_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/frag_my_tv_nickName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frag_my_rv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_my_tv_email" />

</androidx.constraintlayout.widget.ConstraintLayout>