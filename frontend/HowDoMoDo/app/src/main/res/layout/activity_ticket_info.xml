<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theater.TicketInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_ticket_info_ll_first_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/act_ticket_info_tv_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="예매 정보"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/act_ticket_info_iv_poster"
        android:layout_width="215dp"
        android:layout_height="310dp"
        android:src="@drawable/tenet"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_ll_first_bar" />

    <TextView
        android:id="@+id/act_ticket_info_tv_title"
        android:layout_width="39dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_iv_poster"
        app:layout_constraintStart_toStartOf="@+id/act_ticket_info_iv_poster"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="13dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="제목" />

    <TextView
        android:id="@+id/act_ticket_info_tv_mvtitle"
        android:layout_width="110dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_iv_poster"
        app:layout_constraintStart_toEndOf="@+id/act_ticket_info_tv_title"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="영화 제목" />

    <TextView
        android:id="@+id/act_ticket_info_tv_type"
        android:layout_width="39dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_tv_title"
        app:layout_constraintStart_toStartOf="@+id/act_ticket_info_iv_poster"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="타입" />

    <TextView
        android:id="@+id/act_ticket_info_tv_mvtype"
        android:layout_width="110dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/act_ticket_info_tv_type"
        app:layout_constraintStart_toEndOf="@+id/act_ticket_info_tv_type"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="영화 타입" />

    <TextView
        android:id="@+id/act_ticket_info_tv_theater"
        android:layout_width="39dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_tv_type"
        app:layout_constraintStart_toStartOf="@+id/act_ticket_info_iv_poster"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="영화관" />

    <TextView
        android:id="@+id/act_ticket_info_tv_mvtheater"
        android:layout_width="110dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/act_ticket_info_tv_theater"
        app:layout_constraintStart_toEndOf="@+id/act_ticket_info_tv_theater"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="영화관 이름" />

    <TextView
        android:id="@+id/act_ticket_info_tv_theater_num"
        android:layout_width="39dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_tv_theater"
        app:layout_constraintStart_toStartOf="@+id/act_ticket_info_iv_poster"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="상영관" />

    <TextView
        android:id="@+id/act_ticket_info_tv_mvtheater_num"
        android:layout_width="110dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/act_ticket_info_tv_theater_num"
        app:layout_constraintStart_toEndOf="@+id/act_ticket_info_tv_theater_num"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="상영관 이름" />

    <TextView
        android:id="@+id/act_ticket_info_tv_date"
        android:layout_width="39dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/act_ticket_info_tv_theater_num"
        app:layout_constraintStart_toStartOf="@+id/act_ticket_info_iv_poster"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="일시" />

    <TextView
        android:id="@+id/act_ticket_info_tv_mvdate"
        android:layout_width="110dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/act_ticket_info_tv_date"
        app:layout_constraintStart_toEndOf="@+id/act_ticket_info_tv_date"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:textColor="#0f1215"
        android:lineSpacingExtra="6sp"
        android:text="상영 일시" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_ticket_info_cl_btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/next_btn_not_complete"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/act_ticket_info_bt_theater_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="예매사 연결"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>