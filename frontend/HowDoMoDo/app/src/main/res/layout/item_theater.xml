<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">
    <ImageView
        android:id="@+id/act_theater_area_iv_photo"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"
        />
    <TextView
        android:id="@+id/act_theater_area_tv_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "CGV"
        android:layout_marginStart="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/act_theater_area_iv_photo"
        app:layout_constraintStart_toEndOf="@id/act_theater_area_iv_photo"
        />

    <TextView
        android:id="@+id/act_theater_area_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/act_theater_area_tv_kind"
        app:layout_constraintStart_toEndOf="@id/act_theater_area_tv_kind"
        android:text="강남 5관"/>

    <TextView
        android:id="@+id/act_theater_area_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/act_theater_area_tv_kind"
        app:layout_constraintTop_toBottomOf="@id/act_theater_area_tv_kind"
        android:text="3.5km"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="예매하기"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/select_area_bt_border"
        app:layout_constraintTop_toTopOf="@id/act_theater_area_iv_photo"
        app:layout_constraintBottom_toBottomOf="@id/act_theater_area_iv_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>